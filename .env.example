# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID - Get from https://discord.com/developers/applications
DISCORD_APP_ID=your_application_id_here

# Command prefix for text commands
BOT_PREFIX=!

# Lavalink Configuration
LAVALINK_URI=http://lavalink:2333
LAVALINK_PASSWORD=youshallnotpass

# Spotify Configuration (optional - for Spotify support)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# YouTube OAuth Configuration (optional - improves reliability for YouTube playback)
# Get refresh token from: https://github.com/lavalink-devs/youtube-source#oauth-setup
YOUTUBE_REFRESH_TOKEN=

# yt-dlp Configuration (optional - for age-restricted videos and better extraction)
# Enable yt-dlp for direct video URL extraction (requires cookies file)
YTDLP_ENABLED=false

# Path to yt-dlp cookies file (export from browser using extension)
# Get cookies.txt from: https://github.com/yt-dlp/yt-dlp#how-do-i-pass-cookies-to-yt-dlp
YTDLP_COOKIES_PATH=./cookies/cookies.txt

# Cache time-to-live in seconds (default: 1800 = 30 minutes)
YTDLP_CACHE_TTL=1800
